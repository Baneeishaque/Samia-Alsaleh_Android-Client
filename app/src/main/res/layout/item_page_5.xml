<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="75dp"
    android:layout_marginBottom="55dp">

    <ImageView
        android:id="@+id/imageView_page_5"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imageviewpage5"/>

    <TextView
        android:id="@+id/textView_page5_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView_page5_description"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/buttonExplore"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:text="Explore Store"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_gravity="center" />

</LinearLayout>